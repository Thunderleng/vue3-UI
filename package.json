    "postcss": "^8.5.3",
    "prettier": "3.5.3",
    "rollup": "^4.35.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "tailwindcss": "^3.4.17",
    "turbo": "^2.4.4",
    "typescript-eslint": "^8.27.0",
