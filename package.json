  "description": "Here's everything you need to build a modern Web UI component library from scratch.",
  "main": "index.js",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build ",
    "lint": "turbo lint",
    "lint-staged": "lint-staged",
    "test": "vitest ",
